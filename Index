<script type="text/javascript">
	function addClass()
	{
		var x=document.getElementById("q");
		x.setAttribute("class", "bg-blur"); 
	}
	function delClass()
	{
		var x=document.getElementById("q");
		x.setAttribute("class", ""); 
	}
</script>
